<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>
    <style name="MyListSeparator">
        <item name="android:minHeight">22dp</item>
        <item name="textAllCaps">true</item>
        <item name="android:background">@drawable/my_separator</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingRight">@dimen/padding_margin_top</item>
        <item name="android:paddingBottom">@dimen/padding_margin_top</item>
        <item name="android:paddingLeft">@dimen/padding_margin_top</item>
    </style>
</resources>
